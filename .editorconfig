# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{rb,rake,haml,js,scss,yml,coffee,jbuilder,rabl,php}]
indent_style = space
indent_size = 2

[{Rakefile,Guardfile,config.ru,Gemfile*,package.json}]
indent_style = space
indent_size = 2
